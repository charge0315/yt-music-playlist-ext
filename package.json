{
  "name": "yt-music-playlist-ext",
  "version": "1.0.1",
  "description": "YouTube Musicの登録チャンネルから最新の楽曲を自動取得してプレイリストにまとめるChrome拡張機能",
  "main": "background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js *.js",
    "lint:fix": "eslint src/**/*.js *.js --fix",
    "format": "prettier --write \"src/**/*.{js,json,html,css}\" \"*.{js,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,json,html,css}\" \"*.{js,json,md}\"",
    "build": "node scripts/build.js",
    "build:zip": "node scripts/build.js --zip",
    "watch": "node scripts/watch.js"
  },
  "keywords": [
    "chrome-extension",
    "youtube-music",
    "playlist",
    "automation"
  ],
  "author": "charge0315",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/charge0315/yt-music-playlist-ext.git"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.260",
    "archiver": "^6.0.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.0.0",
    "fs-extra": "^11.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.0.0"
  }
}
