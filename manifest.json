{
  "manifest_version": 3,
  "name": "YouTube Music Playlist Extension",
  "version": "1.0.0",
  "description": "登録チャンネルから最新の楽曲を自動取得してプレイリストにまとめるChrome拡張機能",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "cookies"
  ],
  "host_permissions": [
    "https://music.youtube.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://music.youtube.com/*"]
    }
  ]
}
